{
    "compilerOptions": {

        "target": "ES2020",
        "module": "ESNext",
        "lib": ["ES2020", "DOM"],


        "outDir": "./dist",
        "rootDir": "./",


        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,


        "moduleResolution": "bundler",
        "resolveJsonModule": true
    },


    "include": [
        "*.ts"
    ],


    "exclude": [
        "node_modules",
        "dist"
    ]
}
